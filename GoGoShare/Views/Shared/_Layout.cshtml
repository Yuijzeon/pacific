    <script>
        //載入頁面後是否自動滾動 60vh
        //應該用 CSS 處理較佳，這裡為方便先用 JS 控制
        if ('@ViewBag.isScroll' != '' && '@ViewBag.isScroll' == 'true') {
            var scrollNum = window.innerHeight * 0.6;

            window.addEventListener('resize', updateScrollNum);
            function updateScrollNum() {
                scrollNum = window.innerHeight * 0.6;
            }

            window.addEventListener('scroll', revert60vh);
            function revert60vh () {
                if (scrollNum > window.scrollY) window.scrollTo(0, scrollNum);
            }
            revert60vh();
        };

        /*如果NAME 標籤列登入換成NAME*/
        var Login = '@Session["Name"]';
        $(function () {
            $("#dropdownMenuButton").hide();
            if (Login != "") {
                $("#Login").hide();
                $("#dropdownMenuButton").show();
                $("#dropdownMenuButton").text("@Session["Name"]");
            }
        })

