@using GoGoShare.Models
@model List<旅程包>

<table class="table table-bordered" id="packs-table">
    <thead>
        <tr>
            <th>標題</th>
            <th class="max-width">描述</th>
            <th>作者</th>
            <th>編輯</th>
            <th>刪除</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var 旅程包 in Model)
        {
            <tr atricle-id="@旅程包.Id">
                <td class="text-nowrap align-middle titleTxt"><a href="~/Search?pack=@旅程包.Id#抬頭">@旅程包.標題</a></td>
                <td class="text-nowrap align-middle">@旅程包.描述</td>
                <td class="text-nowrap align-middle dateTxt"><a href="~/Search?user=@旅程包.用戶.Id#抬頭">@旅程包.用戶.名字</a></td>
                <td class="text-center align-middle">
                    <div class="btn-group align-top">
                        <button onclick="window.location.href='/Pack?id=@旅程包.Id#editor'" class="btn btn-sm btn-outline-secondary badge" type="button" data-toggle="modal" data-target="#user-form-modal">Edit</button>
                    </div>
                </td>
                <td class="text-center align-middle">
                    <div class="btn-group align-top">
                        <button class="btn btn-sm btn-outline-danger badge" type="button"><i class="fa fa-trash"></i></button>
                    </div>
                </td>
            </tr>
        }
        @if (Model.Count == 0)
        {
            <tr>
                <td class="text-nowrap align-middle titleTxt" colspan="5">無相符搜尋結果</td>
            </tr>
        }
    </tbody>
</table>