@using 第二組期末專題.Models
@model List <文章>

<header>
    <!-- 以下是一個 slider -->
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <!-- 以下是 slider 下方的指示器 -->
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <!-- 以下是 slider 中的影像圖片區 -->
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="../../Content/images/image_11.jpg" class="img-fluid" alt="pancake1">
                <!-- 下方 div 是標題說明區 -->
				<div class="carousel-caption d-none d-md-block">
					<h3 style= "color:white">@Model[1]["標題"]</h3>
					<p class="location"><span class="fa fa-map-marker"></span> @Model[1]["地點"]</p>
					<p>
						@Model[1]["內容"]
					</p>
					<button class="btn btn-primary btn-md" data-toggle="modal" data-target="#myModalone">
						查看更多
					</button>
				</div>
            </div>
            <!-- Modal -->
            <div class="modal fade" id="myModalone" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
							<h4 class="modal-title">@Model[1]["標題"]</h4>
                        </div>
						<div class="modal-body">
							<p class="location"><span class="fa fa-map-marker"></span> @Model[1]["地點"]</p>
							<img src="../../Content/images/image_11.jpg" class="img-fluid">
							@Model[1]["內容"]

							<!--<div>Hashtags</div>-->

						</div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">關閉</button>
                            <button type="button" class="btn btn-primary">加入收藏</button>
                        </div>
                    </div><!-- /.modal-content -->
                </div><!-- /.modal -->
            </div>

            <div class="carousel-item">
                <img src="../../Content/images/image_7.jpeg" class="img-fluid" alt="pancake1">
                <!-- 下方 div 是標題說明區 -->
                <div class="carousel-caption d-none d-md-block">
					<h3 style="color:white">@Model[0]["標題"]</h3>
					<p class="location"><span class="fa fa-map-marker"></span> @Model[0]["地點"]</p>
					<p>
						@Model[0]["內容"]
					</p>
                    <button class="btn btn-primary btn-md" data-toggle="modal" data-target="#myModaltwo">
                        查看更多
                    </button>
                </div>
            </div>
            <!-- Modal -->
            <div class="modal fade" id="myModaltwo" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
							<h4 class="modal-title">@Model[0]["標題"]</h4>
                        </div>
						<div class="modal-body">
							<p class="location"><span class="fa fa-map-marker"></span> @Model[0]["地點"]</p>
							<img src="../../Content/images/image_7.jpg" class="img-fluid">
							@Model[0]["內容"]

							<!--<div>Hashtags</div>-->

						</div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">關閉</button>
                            <button type="button" class="btn btn-primary">加入收藏</button>
                        </div>
                    </div><!-- /.modal-content -->
                </div><!-- /.modal -->
            </div>
            <div class="carousel-item">
                <img src="../../Content/images/image_12.jpg" class="img-fluid">
                <!-- 下方 div 是標題說明區 -->
                <div class="carousel-caption d-none d-md-block">

					<h3 style="color:white">@Model[2]["標題"]</h3>
					<p class="location"><span class="fa fa-map-marker"></span> @Model[2]["地點"]</p>
					<p>
						@Model[2]["內容"]
					</p>
                    <button class="btn btn-primary btn-md" data-toggle="modal" data-target="#myModalthree">
                        查看更多
                    </button>
                </div>
            </div>
            <!-- Modal -->
            <div class="modal fade" id="myModalthree" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
							<h4 class="modal-title">@Model[2]["標題"]</h4>
                        </div>
						<div class="modal-body">
							<p class="location"><span class="fa fa-map-marker"></span> @Model[2]["地點"]</p>
							<img src="../../Content/images/image_12.jpg" class="img-fluid">
							@Model[2]["內容"]
							<!--<div>Hashtags</div>-->

						</div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">關閉</button>
                            <button type="button" class="btn btn-primary">加入收藏</button>
                        </div>
                    </div><!-- /.modal-content -->
                </div><!-- /.modal -->
            </div>
        </div>
        <!-- 以下是 slider 左右方向的控制區 -->
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>

    </div>
</header>