@{
    Layout = null;
}
<html lang="zh-tw">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
          integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css"
          integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/css/sign_Up.css">

    <script src="https://code.jquery.com/jquery-3.3.1.min.js"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>

    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <style>
        input {
            height: 45px;
            width: 347px
        }

        .register-show input[type="email"] {
            width: 100%;
            display: block;
            margin: 20px 0;
            padding: 15px;
            border: 1px solid #b5b5b5;
            outline: none;
        }

        .login-show input[type="email"] {
            width: 100%;
            display: block;
            margin: 20px 0;
            padding: 15px;
            border: 1px solid #b5b5b5;
            outline: none;
        }

        @@media (max-width: 720px) {
            body {
                height:800px;
                overflow: auto;
                background-size:inherit;
                margin-bottom:0px;
            }
            html{
                height:100%;
                margin-bottom:0px;
            }
            div {
                font-size: 12px;
            }
            input{
                width:90%;
                margin:0px;
                padding:0px;
            }
            .login-show, .register-show {
                margin: 0px;
                padding: 50px 20px;
            }
            .white-panel {
                width: 100%;
                position: unset;
            }
            .login-reg-panel{
                height:100%;
                margin:25% auto;
            }
            .login-info-box {
                margin: 0 auto;
                margin-top: 400px;
                width: 100%;
                text-align:center;
            }
            .register-info-box {
                margin: 0px auto;
                width: 100%;
                text-align: center;
                padding: unset;
                position: unset;
            }
            #label-login{
                margin:0 auto;
                margin-bottom:0.5em;
            }
            #label-register{
                margin: 10% auto;
            }
             #label-login:hover{
                margin: 0 auto;
                margin-bottom: 0.5em;
                background-color: #f15d30;
            }
            #label-register:hover {
                margin: 10% auto;
                background-color: #f15d30;
            }
        }
    </style>

</head>

<body>

    <div class="login-reg-panel">
        <div class="login-info-box">
            <h2>Have an account ?</h2>
            <p>已經有帳號了嗎?<br/>快來探索新旅程吧!</p>
            <label id="label-register" for="log-reg-show">登入</label>
            <input type="radio" name="active-log-panel" id="log-reg-show" checked="checked">
        </div>
        <div class="register-info-box">
            <h2>Don't have an account ?</h2>
            <p>想探索不一樣的旅程嗎?<br/>先從註冊開始吧!</p>
            <label id="label-login" for="log-login-show">註冊</label>
            <input type="radio" name="active-log-panel" id="log-login-show">
        </div>
        <div class="white-panel">
            <form method="post" action="~/SignUp/index">
                <div class="login-show">
                    <h2>登入</h2>
                    <input id="account_text" type="email" placeholder="電子郵件" name="帳號" required />
                    <input id="password_text" type="password" placeholder="密碼" name="密碼" required />
                    <input type="submit" value="登入">
                    <h5 style="color:red;">@ViewBag.msg</h5>
                </div>
            </form>
            <form method="post" action="~/SignUp/註冊">
                <div class="register-show">
                    <h2>註冊</h2>
                    <input name="Email" size="40" type="email" id="test" placeholder="電子郵件" required />
                    <input name="Password" type="password" placeholder="密碼" required />
                    <input name="Name" type="text" placeholder="姓名" required />
                    <input name="Phone" type="text" placeholder="手機號碼" required />
                    <input type="submit" value="送出"><br>
                </div>
            </form>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $('.login-info-box').fadeOut();
            $('.login-show').addClass('show-log-panel');
        });
        $('.login-reg-panel input[type="radio"]').on('change', function () {
            if ($('#log-login-show').is(':checked')) {
                $('.register-info-box').fadeOut();
                $('.login-info-box').fadeIn();

                $('.white-panel').addClass('right-log');
                $('.register-show').addClass('show-log-panel');
                $('.login-show').removeClass('show-log-panel');
            }
            else if ($('#log-reg-show').is(':checked')) {
                $('.register-info-box').fadeIn();
                $('.login-info-box').fadeOut();

                $('.white-panel').removeClass('right-log');

                $('.login-show').addClass('show-log-panel');
                $('.register-show').removeClass('show-log-panel');
            }
        });

    </script>

    @if (TempData["message"] != null)
    {
        <script type="text/javascript">
            document.getElementById("account_text").value = @Html.Raw(Json.Encode(TempData["account_text"]));
            document.getElementById("password_text").value = @Html.Raw(Json.Encode(TempData["password_text"]));
            window.onload = function () {
                var message = @Html.Raw(Json.Encode(TempData["message"])); //將登入訊息放到變數內
                alert(message);  //跳提示視窗顯示變數內容
                document.location.href = "../Home"; //跳轉
            }
        </script>
    }
</body>

</html>
