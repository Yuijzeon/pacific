@using 第二組期末專題.Models
@model List<Hashtag>
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title - Short Stay, be friends</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Arizonia&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/Content/css/animate.css">

    <link rel="stylesheet" href="~/Content/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Content/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/Content/css/magnific-popup.css">

    <link rel="stylesheet" href="~/Content/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="~/Content/css/jquery.timepicker.css">

    <link rel="stylesheet" href="~/Content/css/flaticon.css">
    <link rel="stylesheet" href="~/Content/css/style.css">

    @if (ViewBag.MyCSSs != null)
    {
        foreach (string css in ViewBag.MyCSSs)
        {
            @Html.Raw(css);
        }

    }

    <script src="~/Content/js/jquery.min.js"></script>
    <script src="~/Content/js/jquery-migrate-3.0.1.min.js"></script>
    <script src="~/Content/js/popper.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Content/js/jquery.easing.1.3.js"></script>
    <script src="~/Content/js/jquery.waypoints.min.js"></script>
    <script src="~/Content/js/jquery.stellar.min.js"></script>
    <script src="~/Content/js/owl.carousel.min.js"></script>
    <script src="~/Content/js/jquery.magnific-popup.min.js"></script>
    <script src="~/Content/js/jquery.animateNumber.min.js"></script>
    <script src="~/Content/js/bootstrap-datepicker.js"></script>
    <script src="~/Content/js/scrollax.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBVWaKrjvy3MaE7SQ74_uJiULgl1JY0H2s&sensor=false"></script>
    <script src="~/Content/js/google-map.js"></script>
    <script src="~/Content/js/main.js"></script>

</head>

<body style="background-image: url('../../Content/images/bg_5.jpg');">
    @using (Html.BeginForm())
    {
        <section class="ftco-intro ftco-section ftco-no-pt">
            <div class="container mt-5">
                <div class="row justify-content-center">
                    <div class="col-md-12 text-center">
                        <div style="background-color: rgba(255, 255, 255, 0.8);">
                            <!--background-color:rgba(255, 255, 255, 0.5);-->
                            <!--background-color:aliceblue-->
                            <div class="overlay"></div>

                            <br><h2 style="color:black">請選擇興趣</h2>
                            <!--展示出hashtag名稱-->
                            @{
                                foreach (Hashtag t in Model)
                                    {
                                    if (t.類別 == "愛好")
                                        {
                                          @Html.ActionLink(t.名稱, "AddUserHashtag", "SignUp", new { id = t.Id },         new { @class = "btn btn-outline-danger", onclick = "return confirm('是否新增標籤?')",style = "margin:5px" })
                                        }
                                    }
                                }

                            <hr />

                            <h2 style="color:black">請選擇地區</h2>

                            @{
                                foreach (Hashtag t in Model)
                                    {
                                    if (t.類別 == "地區"){
                                    @Html.ActionLink(t.名稱, "AddUserHashtag", "SignUp", new { id = t.Id }, new { @class = "btn btn-outline-danger", onclick = "return confirm('是否要新增標籤?')", style = "margin:5px" })
                                        }
                                    }
                                }

                            <p class="mb-0" style="width: 100%;">
                                <br>@Html.ActionLink("完成", "back", "SignUp", new { @class = "btn btn-outline-danger", style = "margin:5px" })
                            </p>
                            <br>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
</body>
</html>