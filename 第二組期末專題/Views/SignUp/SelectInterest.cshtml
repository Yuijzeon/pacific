
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title - Short Stay, be friends</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Arizonia&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/Content/css/animate.css">

    <link rel="stylesheet" href="~/Content/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Content/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/Content/css/magnific-popup.css">

    <link rel="stylesheet" href="~/Content/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="~/Content/css/jquery.timepicker.css">

    <link rel="stylesheet" href="~/Content/css/flaticon.css">
    <link rel="stylesheet" href="~/Content/css/style.css">

    @if (ViewBag.MyCSSs != null)
    {
        foreach (string css in ViewBag.MyCSSs)
        {
            @Html.Raw(css);
        }

    }

    <script src="~/Content/js/jquery.min.js"></script>
    <script src="~/Content/js/jquery-migrate-3.0.1.min.js"></script>
    <script src="~/Content/js/popper.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Content/js/jquery.easing.1.3.js"></script>
    <script src="~/Content/js/jquery.waypoints.min.js"></script>
    <script src="~/Content/js/jquery.stellar.min.js"></script>
    <script src="~/Content/js/owl.carousel.min.js"></script>
    <script src="~/Content/js/jquery.magnific-popup.min.js"></script>
    <script src="~/Content/js/jquery.animateNumber.min.js"></script>
    <script src="~/Content/js/bootstrap-datepicker.js"></script>
    <script src="~/Content/js/scrollax.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBVWaKrjvy3MaE7SQ74_uJiULgl1JY0H2s&sensor=false"></script>
    <script src="~/Content/js/google-map.js"></script>
    <script src="~/Content/js/main.js"></script>

</head>

<body style="background-image: url('../../Content/images/bg_5.jpg');">
    <form>
        <section class="ftco-intro ftco-section ftco-no-pt">
            <div class="container mt-5">
                <div class="row justify-content-center">
                    <div class="col-md-12 text-center">
                        <div style="background-color: rgba(255, 255, 255, 0.8);">
                            <!--background-color:rgba(255, 255, 255, 0.5);-->
                            <!--background-color:aliceblue-->
                            <div class="overlay"></div>

                            <br><h2 style="color:black">請選擇興趣</h2>
                            <input type="checkbox" class="btn-check" id="cb1" autocomplete="off">
                            <label class="btn btn-outline-primary" for="cb1">#電影</label>

                            <input type="checkbox" class="btn-check" id="cb2" autocomplete="off">
                            <label class="btn btn-outline-primary" for="cb2">#自然</label>

                            <input type="checkbox" class="btn-check" id="cb3" autocomplete="off">
                            <label class="btn btn-outline-primary" for="cb3">#水上活動</label>

                            <input type="checkbox" class="btn-check" id="cb4" autocomplete="off">
                            <label class="btn btn-outline-primary" for="cb4">#陸上活動</label><br>

                            <input type="checkbox" class="btn-check" id="cb5" autocomplete="off">
                            <label class="btn btn-outline-primary" for="cb5">#水上活動</label>

                            <input type="checkbox" class="btn-check" id="cb6" autocomplete="off">
                            <label class="btn btn-outline-primary" for="cb6">#水上活動</label>

                            <input type="checkbox" class="btn-check" id="cb7" autocomplete="off">
                            <label class="btn btn-outline-primary" for="cb7">#水上活動</label>

                            <input type="checkbox" class="btn-check" id="cb8" autocomplete="off">
                            <label class="btn btn-outline-primary" for="cb8">#水上活動</label>
                            <hr />

                            <h2 style="color:black">請選擇地區</h2>

                            <input type="radio" class="btn-check" name="rdocheck" id="radio1">
                            <label class="btn btn-outline-danger" for="radio1">台中</label>

                            <input type="radio" class="btn-check" name="rdocheck" id="radio2">
                            <label class="btn btn-outline-danger" for="radio2">南投</label>

                            <input type="radio" class="btn-check" name="rdocheck" id="radio3">
                            <label class="btn btn-outline-danger" for="radio3">嘉義</label>

                            <input type="radio" class="btn-check" name="rdocheck" id="radio4">
                            <label class="btn btn-outline-danger" for="radio4">台南</label><br>

                            <input type="radio" class="btn-check" name="rdocheck" id="radio5">
                            <label class="btn btn-outline-danger" for="radio5">高雄</label>

                            <input type="radio" class="btn-check" name="rdocheck" id="radio6">
                            <label class="btn btn-outline-danger" for="radio6">屏東</label>

                            <input type="radio" class="btn-check" name="rdocheck" id="radio7">
                            <label class="btn btn-outline-danger" for="radio7">台東</label>

                            <input type="radio" class="btn-check" name="rdocheck" id="radio8">
                            <label class="btn btn-outline-danger" for="radio8">花蓮</label>

                            <p class="mb-0" style="width: 100%;">
                                <br><a href="#" class="btn btn-primary px-4 py-1 mx-3">完成</a>
                            </p>
                            <br>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>
</body>
</html>
