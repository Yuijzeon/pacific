@model object

<div class="about-author d-flex p-4 bg-light">
    @if (Session["Id"] == null)
    {
        <div class="comment-form-wrap">
            <h3>請先登入以發表評論!</h3>
        </div>
    }
    else
    {
        <div class="comment-form-wrap pt-5">
            <h3 class="mb-5" style="font-size: 20px; font-weight: bold;">Leave a comment</h3>
            <form action="/Article/NewComment" method="POST" class="p-5 bg-light">
                <div class="form-group">
                    <label for="name">分數</label>
                    <input name="分數" type="number" class="form-control">
                </div>
                <input name="文章_FK" type="hidden" value="@Model">
                <div class="form-group">
                    <label for="message">Message</label>
                    <textarea name="評論" cols="30" rows="10" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn py-3 px-4 btn-primary">
                </div>
            </form>
        </div>
    }
</div>